@using System.Linq
@using Orchard.ContentManagement;
@using Orchard.ContentManagement.Aspects;
@using MainBit.Relationships.Models;
@{
    var relationshipGroups = (List<RelationshipGroupRecord>)Model.RelationshipGroups;
    var currentValue = Model.Value == null ? 0 : (int)Model.Value;
    var options = relationshipGroups.Select(x => new SelectListItem
    {
        Text = x.Title, //x.As<ITitleAspect>().Title,
        Value = x.Id.ToString(),
        Selected = x.Id == currentValue 
    });
    var name = Model.Name != null ? Model.Name as string : "RelationshipGroupRecord_Id";
    
}
@Html.DropDownList(name, options, T("Select an option").ToString())